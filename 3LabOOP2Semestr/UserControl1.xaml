<UserControl x:Class="_3LabOOP2Semestr.UserControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:_3LabOOP2Semestr"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <materialDesign:Card Background="#d9ffde">
            <Border Margin="10" CornerRadius="30">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0.1,0.1" EndPoint="0.9,1">
                        <GradientStop Color="#00ff73" Offset="0"/>
                        <GradientStop Color="#5cc3ff" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Canvas Name="MainCanvas">
                    <Button x:Name="NesButton" Content="Так" Width="85" Height="35" Canvas.Left="259" Canvas.Top="197" Click="YesButton_Click" Background="#c0ff6e" Foreground="Black" BorderBrush="#c0ff6e"
                            materialDesign:ButtonAssist.CornerRadius="15" FontFamily="pack://application:,,,/Fonts/#Lady Marmalade" FontSize="23"/>
                    <Button x:Name="NoButton" Content="Ні" Width="85" Height="35" Canvas.Left="466" Canvas.Top="197"
                            MouseEnter="EscButton_MouseEnter" HorizontalAlignment="Center" VerticalAlignment="Top" Background="#c0ff6e" Foreground="Black" BorderBrush="#c0ff6e"
                            materialDesign:ButtonAssist.CornerRadius="15" FontFamily="pack://application:,,,/Fonts/#Lady Marmalade" FontSize="23"/>
                    <Label Content="Вас все влаштовує?" Height="45" Canvas.Left="246" Canvas.Top="95" Width="308" HorizontalContentAlignment="Center" FontSize="30" HorizontalAlignment="Left" 
                           VerticalAlignment="Center" FontFamily="pack://application:,,,/Fonts/#Lady Marmalade"/>
                </Canvas>
            </Border>
        </materialDesign:Card>
    </Grid>
</UserControl>
